<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-2">
<body>
    <h4>Edit this listing</h4>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <!-- so we are making a object named listing and its first key will be title e.g. listing[title] and second key will be listing[description] -->
         <div class="mb-3">
         <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter your title" type="text" value="<%=listing.title%>" class="form-control" required></input>
         </div>
        <!-- HTML forms use [] to create nested objects so we have to do name="listing[title]" and not name="listing{title}" -->
        <div class="mb-3">
         <label for="description" class="form-label">description</label>
        <input name="listing[description]" placeholder="enter your description" type="text" value="<%=listing.description%>" class="form-control" required></input>
         <div class="invalid-feedback">Please Enter a Short Description!</div>
        </div>

         <div class="mb-3">
            Original Listing Image
            <br>
            <img src="<%=originalImageUrl%>"/>
        </div>

        <div class="mb-3">
         <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[image]" placeholder="enter your image/link" type="file" value="<%=listing.image%>" class="form-control" ></input>
         
        </div>
        
        <div class="mb-3">
         <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="enter your price"  value="<%=listing.price%>" class="form-control" required></input>
        <div class="invalid-feedback">Please Enter Price!</div>
        <div>

        <div class="mb-3">
         <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="enter your location" type="text" value="<%=listing.location%>" class="form-control" required></input>
        <div class="invalid-feedback" >Please Enter a Location!</div>
        </div>

        <div class="mb-3">
         <label for="country" class="form-label">country</label>
        <input name="listing[country]" placeholder="enter your country" type="text" value="<%=listing.country%>" class="form-control" required></input>
         <div class="invalid-feedback" >Please Enter Country!</div>
        </div>
        <button class="btn mt-3 edit-btn">Edit</button>
    </form>

</body>
 </div>
</div>