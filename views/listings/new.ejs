<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-2">
<body>
    <br></br>
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <!-- class="needs-validation" novalidate for bootstrap validation -->
        <!-- so we are making a object named listing and its first key will be title e.g. listing[title] and second key will be listing[description] -->
         <div class="mb-3">
         <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter your title" type="text" class="form-control" required></input>
        <div class="valid-feedback">Title looks Good!</div>
         </div>
        <!-- HTML forms use [] to create nested objects so we have to do name="listing[title]" and not name="listing{title}" -->
         <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <input name="listing[description]" placeholder="enter your description" type="text" class="form-control" required></input>
        <div class="invalid-feedback">Please Enter a Short Description!</div>
         </div>
        
        <!-- <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input name="listing[image]" placeholder="enter your image/link" type="text" class="form-control" ></input>
        </div> -->

        <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input name="listing[image]" placeholder="enter your image/link" type="file" class="form-control" required></input>
        </div>
        

        <div class="row">
        <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="enter your price"  class="form-control" required></input>
        <div class="invalid-feedback">Please Enter Price!</div>
        </div>

        <div class="mb-3 col-md-8"> 
        <label for="country" class="form-label">country</label>
        <input name="listing[country]" placeholder="enter your country" type="text" class="form-control" required></input>
        <div class="invalid-feedback">Please Enter Country!</div>
        </div>
    </div>

        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="enter your location" type="text" class="form-control" required></input>
        <div class="invalid-feedback">Please Enter a Location!</div>
        </div>

        <div class="mb-3">
  <label class="form-label">Category</label>
  <select name="listing[category]" class="form-select" required>
    <option value="">Select category</option>
    <option value="Trending">Trending</option>
    <option value="Rooms">Rooms</option>
    <option value="Iconic City">Iconic City</option>
    <option value="Mountains">Mountains</option>
    <option value="Castles">Castles</option>
    <option value="Amazing Pools">Amazing Pools</option>
    <option value="Camping">Camping</option>
    <option value="Farm">Farm</option>
    <option value="Snow">Snow</option>
  </select>
</div>

        
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
    </form>

</body>
</div>
</div>